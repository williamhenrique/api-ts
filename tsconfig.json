{
  "compilerOptions": {
    "outDir": "builder",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "watch": true,
    "typeRoots": [
        "./node_modules/@types"
    ],
    "types": [
        "node"
    ]
},
"exclude": [
    "node_modules"
],
"include": [
    "server/**/*.ts",
    "server/*.ts",
    "tests/**/*",
    "tests/*"  
],
"compileOnSave": true,
"buildOnSave": true
}