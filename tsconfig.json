    "compilerOptions": {
        "outDir": "builder",
        "module": "commonjs",
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
